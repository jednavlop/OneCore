<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @* Vea el archivo Global.asax para observar cómo están definidos los bundles. *@
    @Styles.Render("~/Estilos")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OneCore", "Index", "Inicio", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (ViewBag.Usuario != null)
                {
                    Usuario usuario = (Usuario)ViewBag.Usuario;
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Administración de usuarios", "Index", "Usuarios")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;@usuario.Nombre&nbsp;<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="Acceso/Salir"><span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;Cerrar sesi&oacute;n</a></li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jesús Navarro - Prueba de ingeniería</p>
        </footer>
    </div>
    @* Vea el archivo Global.asax para observar cómo están definidos los bundles. *@
    @Scripts.Render("~/Codigos")
</body>
</html>