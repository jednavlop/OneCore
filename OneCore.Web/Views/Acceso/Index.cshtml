@{
    ViewBag.Title = "Acceder";
}
<form id="formulario-acceso" name="acceso">
    <div id="panel-acceso" class="panel panel-primary">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Iniciar sesi&oacute;n
        </div>
        <div class="panel-body">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <input id="usuario" name="usuario" class="form-control" type="text" maxlength="50" placeholder="Nombre de usuario" />
            </div>
            <br />
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input id="contraseña" name="contraseña" class="form-control" type="password" maxlength="50" placeholder="Contraseña de acceso" />
            </div>
            <div id="acceso-concedido" class="hidden">
                <br />
                <span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Acceso concedido
            </div>
            <div id="acceso-denegado" class="hidden">
                <br />
                <span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;Acceso denegado
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group btn-group-justified">
                <div class="btn-group">
                    <button id="enviar" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Entrar</button>
                </div>
            </div>
        </div>
    </div>
</form>
